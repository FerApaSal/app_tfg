<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/beige"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Cabecera con botón atrás y título -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnVolverNovias"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="Volver"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/rosaRoto"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/tvTituloSeccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sección para novias"
            android:textSize="20sp"
            android:textColor="@color/rosaRoto"
            android:fontFamily="@font/apercu_bold"
            android:layout_marginStart="45dp" />
    </LinearLayout>

    <!-- Imagen grande centrada -->
    <ImageView
        android:id="@+id/ivImagenNovias"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="Imagen seleccionada" />

    <!-- Botón subir imagen -->
    <Button
        android:id="@+id/btnSubirImagenNovias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subir imagen"
        android:textColor="@color/blanco"
        android:backgroundTint="@color/rosaRoto"
        android:fontFamily="@font/apercu_bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Versión: 1.0"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:fontFamily="@font/apercu_regular"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="1dp" />

</LinearLayout>
