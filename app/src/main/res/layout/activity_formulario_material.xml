<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Fila: botón volver + título -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnVolverFormularioMaterial"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="Volver"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/rosaRoto"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/tvTituloFormularioMaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nuevo material"
                android:textSize="20sp"
                android:fontFamily="@font/apercu_bold"
                android:textColor="@color/rosaRoto"
                android:paddingStart="75dp"
                android:paddingTop="4dp" />
        </LinearLayout>

        <!-- Etiqueta de imagen -->
        <ImageView
            android:id="@+id/ivPreviewMaterial"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user_placeholder"
            android:background="@drawable/circle_background"
            android:contentDescription="Previsualización imagen" />

        <!-- Botón seleccionar imagen -->
        <Button
            android:id="@+id/btnSubirImagenMaterial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:text="Seleccionar imagen"
            android:textColor="@color/blanco"
            android:backgroundTint="@color/rosaRoto"
            android:fontFamily="@font/apercu_bold" />

        <!-- Campo: Nombre -->
        <EditText
            android:id="@+id/etNombreMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Nombre del material"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textCursorDrawable="@drawable/cursor_negro"
            android:fontFamily="@font/apercu_regular"
            android:minHeight="48dp" />

        <!-- Campo: Descripción -->
        <EditText
            android:id="@+id/etDescripcionMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Descripción"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:maxLines="5"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textCursorDrawable="@drawable/cursor_negro"
            android:fontFamily="@font/apercu_regular" />

        <!-- Selector: Tipo de material -->
        <Spinner
            android:id="@+id/spinnerTipoMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="48dp" />

        <!-- Selector: Estado del material -->
        <Spinner
            android:id="@+id/spinnerEstadoMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="48dp" />

        <!-- Campo: Cantidad -->
        <EditText
            android:id="@+id/etCantidadMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cantidad"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textCursorDrawable="@drawable/cursor_negro"
            android:fontFamily="@font/apercu_regular"
            android:layout_marginTop="10dp"
            android:minHeight="48dp" />

        <!-- Botón guardar -->
        <Button
            android:id="@+id/btnGuardarMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Guardar"
            android:textColor="@color/blanco"
            android:backgroundTint="@color/rosaRoto"
            android:fontFamily="@font/apercu_bold" />


    </LinearLayout>
</ScrollView>
