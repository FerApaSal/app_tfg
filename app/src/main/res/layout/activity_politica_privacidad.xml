<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/beige"
    android:padding="24dp">

    <!-- BotÃ³n de volver (esquina superior izquierda) -->
    <ImageButton
        android:id="@+id/btnVolverPolitica"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Volver"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/rosaRoto"
        tools:ignore="TouchTargetSizeCheck" />

    <!-- Contenido desplazable -->
    <ScrollView
        android:id="@+id/scrollTexto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnVolverPolitica"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/tvPoliticaTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/politica_privacidad_texto"
            android:textColor="@color/black"
            android:fontFamily="@font/apercu_regular"
            android:textSize="14sp"
            android:lineSpacingExtra="6dp"
            tools:ignore="HardcodedText" />
    </ScrollView>
</RelativeLayout>
