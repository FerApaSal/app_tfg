<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/beige"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="Logo"
            android:scaleType="centerInside"
            tools:ignore="HardcodedText" />

        <!-- Slogan -->
        <TextView
            android:id="@+id/tvSlogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu belleza, en buenas manos"
            android:textColor="@color/rosaRoto"
            android:textSize="18sp"
            android:fontFamily="@font/apercu_regular"
            android:layout_marginBottom="24dp"
            tools:ignore="HardcodedText" />

        <!-- Correo electrónico -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Correo electrónico"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/rosaRoto"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textCursorDrawable="@drawable/cursor_negro"
            android:fontFamily="@font/apercu_regular"
            android:layout_marginBottom="12dp"
            tools:ignore="HardcodedText" />

        <!-- Contraseña con botón para mostrar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:backgroundTint="@color/rosaRoto">

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:backgroundTint="@color/rosaRoto"
                android:textCursorDrawable="@drawable/cursor_negro"
                android:fontFamily="@font/apercu_regular"
                android:paddingStart="8dp"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/btnTogglePassword"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_visibility"
                android:background="@android:color/transparent"
                android:contentDescription="Mostrar/Ocultar contraseña"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <!-- Botón Entrar -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Entrar"
            android:backgroundTint="@color/rosaRoto"
            android:textColor="@color/blanco"
            android:textStyle="bold"
            android:fontFamily="@font/apercu_bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText" />

        <!-- Acceso a registro -->
        <Button
            android:id="@+id/btnRegistrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No tengo cuenta"
            android:backgroundTint="@android:color/darker_gray"
            android:textColor="@color/blanco"
            android:fontFamily="@font/apercu_regular"
            android:layout_marginBottom="8dp"
            tools:ignore="HardcodedText" />

        <!-- Acceso a recuperación -->
        <Button
            android:id="@+id/btnRecuperarClave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Olvidé mi clave"
            android:backgroundTint="@android:color/darker_gray"
            android:textColor="@color/blanco"
            android:fontFamily="@font/apercu_regular"
            android:layout_marginBottom="32dp"
            tools:ignore="HardcodedText" />

        <!-- Pie de versión + privacidad -->
        <TextView
            android:id="@+id/tvPoliticaPrivacidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Versión: 1.0 • Política de privacidad"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:fontFamily="@font/apercu_italic"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</ScrollView>
