<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:background="@color/blanco">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Nombre del cliente -->
        <TextView
            android:id="@+id/tvNombreCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Apellido"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/apercu_bold" />

        <!-- Hora de la cita -->
        <TextView
            android:id="@+id/tvHoraCita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="10:00"
            android:textSize="18sp"
            android:textColor="@color/blanco"
            android:fontFamily="@font/apercu_bold" />

        <!-- Tipo de servicio -->
        <TextView
            android:id="@+id/tvTipoServicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNombreCliente"
            android:layout_marginTop="4dp"
            android:text="Novia"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:fontFamily="@font/apercu_regular" />

        <!-- DirecciÃ³n -->
        <TextView
            android:id="@+id/tvDireccionCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTipoServicio"
            android:layout_marginTop="2dp"
            android:text="Calle Ejemplo 123"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:fontFamily="@font/apercu_regular" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>